<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
             x:Class="MauiApp1.Pages.StrengthPage"
             Title=""
             Style="{DynamicResource DarkPageStyle}"
             Shell.NavBarIsVisible="True">
    <ScrollView>
    <VerticalStackLayout Padding="10" Spacing="10">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="Strength" FontSize="24" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Button Text="+" Clicked="OnIncreaseClicked1" BackgroundColor="#262626"/>
                    <Label x:Name="StrengthDisplay" Text="0" FontSize="24" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Button Text="-" Clicked="OnDecreaseClicked1" BackgroundColor="#262626"/>
                </VerticalStackLayout>

                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="Position" FontSize="24" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Button Text="+" Clicked="OnIncreaseClicked2" BackgroundColor="#262626"/>
                    <Label x:Name="PositionDisplay" Text="0" FontSize="24" TextColor="White" VerticalOptions="Center" HorizontalOptions="Center"/>
                    <Button Text="-" Clicked="OnDecreaseClicked2" BackgroundColor="#262626"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        
        <Label Text=" " VerticalOptions="FillAndExpand" Padding="50"/>
        <Button Text="Set Strength"
        VerticalOptions="EndAndExpand"
        BackgroundColor="#262626"
        Pressed="OnStrengthButtonPressed"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>